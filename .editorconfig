# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab

# Indentation override for all JS(X)/TS(X) files.
[*.{js,ts,tsx,jsx}]
charset = utf-8
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2